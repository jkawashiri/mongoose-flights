<%- include('../partials/header') %>

<h2><%= title %></h2>

<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departure Time</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= (() => { 
              let date = new Date(flight.departs);
              let year = date.getFullYear();
              let month = (date.getMonth() + 1).toString().padStart(2, '0');
              let day = date.getDate().toString().padStart(2, '0');
              let hours = date.getHours().toString().padStart(2, '0');
              let minutes = date.getMinutes().toString().padStart(2, '0');
              return `${year}-${month}-${day} ${hours}:${minutes}`;
          }) () %>
        </td>
      </tr>
  </tbody>
</table>

<br><br><h2>Enter a Destination</h2>
<form action="/flights/<%= flight._id %>/destinations" method="POST">
  <label>Arrival Time:
    <input type="datetime-local" name="arrival">
  </label><br>
  <label>Airport:
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX" selected>LAX</option>
      <option value="SAN">SAN</option>
      <option value="BUR">BUR</option>
      <option value="JFK">JFK</option>
    </select>
  </label><br>
  <br><button type="submit">Add Destination</button>
</form>

<br><br><% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Arrival Time</th>
        <th>Airport</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(d) { %>
        <tr>
          <td>
            <%= (() => { 
              let date = new Date(d.arrival);
              let year = date.getFullYear();
              let month = (date.getMonth() + 1).toString().padStart(2, '0');
              let day = date.getDate().toString().padStart(2, '0');
              let hours = date.getHours().toString().padStart(2, '0');
              let minutes = date.getMinutes().toString().padStart(2, '0');
              return `${year}-${month}-${day} ${hours}:${minutes}`;
            }) () %>
          </td>
          <td><%= d.airport %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>

<%- include('../partials/footer') %>